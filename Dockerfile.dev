# Development Dockerfile for Next.js
FROM node:22.21.1-alpine

WORKDIR /app

# Install git (needed for commit hash injection)
RUN apk add --no-cache git

# Configure git to trust the /app directory (needed for volume-mounted repositories)
RUN git config --global --add safe.directory /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm install

# Note: We don't copy the source code here because
# we'll use volume mounting instead

EXPOSE 3000

# Run development server with hot reloading
CMD ["npm", "run", "dev"]
